<div class="col-sm-6">
  <h3>Datencenter</h3>
</div>
<div class="col-sm-6" id="orderDetails">
  <div class="panel-group" id="accordion">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <span class="glyphicon glyphicon-pushpin"></span>
          <a data-toggle="collapse" data-parent="#accordion" href="#order_overview">Ihr Auftrag vom <%= l(@order.created_at, format: :long) %></a>
        </h3>
      </div>
      <div id="order_overview" class="panel-collapse collapse in">
        <div class="panel-body">
          <div class="form-group">
            <label class="control-label">Auftragsnummer</label>
            <span class="form-control"><%= @order.order_number %></span>
          </div>
          <div class="form-group">
            <label class="control-label">Kontakt</label>
            <span class="form-control"><%= @order.user.full_name %></span>
          </div>
          <div class="form-group">
            <label class="control-label">E-Mail:</label>
            <span class="form-control"><%= @order.user.email %></span>
          </div>
          <div class="form-group">
            <label class="control-label">Ansprechpartner:</label>
            <span class="form-control"><%= @order.admin_user.email %></span>
          </div>
        </div>
      </div>
    </div>
    <% @order.addresses.each do |address| %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">
            <span class="<%= address.glyphicon %>"></span>
            <a data-toggle="collapse" data-parent="#accordion" href="#order_address_<%= address.id %>"><%= address.title %></a>
            <button style="float:right" type="button" class="btn btn-warning btn-xs">bearbeiten</button>
          </h4>
        </div>
        <div id="order_address_<%= address.id %>" class="panel-collapse collapse">
          <div class="panel-body">
            <div class="form-group">
              <label class="control-label" for="id">Krankenhaus</label>
              <span class="form-control"><%= address.hospital %></span>
            </div>
            <div class="form-group">
              <label class="control-label" for="id">Abteilung</label>
              <span class="form-control"><%= address.department %></span>
            </div>
            <div class="form-group">
              <label class="control-label" for="id">Name</label>
              <span class="form-control"><%= address.full_name %></span>
            </div>
            <div class="form-group">
              <label class="control-label" for="id">Stra√üe</label>
              <span class="form-control"><%= address.street_1 %>, <%= address.street_2 %></span>
            </div>
            <div class="form-group">
              <label class="control-label" for="id">PLZ, Ort</label>
              <span class="form-control"><%= address.zip %>, <%= address.city %></span>
            </div>
            <div class="form-group">
              <label class="control-label" for="id">Telefon</label>
              <span class="form-control"><%= address.phone %></span>
            </div>
            <div class="form-group">
              <label class="control-label" for="id">E-Mail</label>
              <span class="form-control"><%= address.email %></span>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>