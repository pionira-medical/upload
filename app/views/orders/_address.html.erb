<div class="panel panel-default">
  <div class="panel-heading">
    <h4 class="panel-title">
      <span class="<%= address.glyphicon %>"></span>
      <a data-toggle="collapse" data-parent="#order_data" href="#order_data_address_<%= address.id %>"><%= address.title %></a>
      <button style="float:right" type="button" class="btn btn-warning btn-xs" data-toggle="modal" data-target="#order_data_address_form_<%= address.id %>">bearbeiten</button>
    </h4>
  </div>
  <div id="order_data_address_<%= address.id %>" class="panel-collapse collapse">
    <div class="panel-body">
      <div class="form-group">
        <label class="control-label" for="id">Krankenhaus</label>
        <span class="form-control"><%= address.hospital %></span>
      </div>
      <div class="form-group">
        <label class="control-label" for="id">Abteilung</label>
        <span class="form-control"><%= address.department %></span>
      </div>
      <div class="form-group">
        <label class="control-label" for="id">Name</label>
        <span class="form-control"><%= address.full_name %></span>
      </div>
      <div class="form-group">
        <label class="control-label" for="id">Stra√üe</label>
        <span class="form-control"><%= address.street_1 %>, <%= address.street_2 %></span>
      </div>
      <div class="form-group">
        <label class="control-label" for="id">PLZ, Ort</label>
        <span class="form-control"><%= address.zip %>, <%= address.city %></span>
      </div>
      <div class="form-group">
        <label class="control-label" for="id">Telefon</label>
        <span class="form-control"><%= address.phone %></span>
      </div>
      <div class="form-group">
        <label class="control-label" for="id">E-Mail</label>
        <span class="form-control"><%= address.email %></span>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="order_data_address_form_<%= address.id %>">
  <div class="modal-dialog">
    <%= form_for(address,remote: true, html: {class: 'modal-content form-horizontal', role: 'form'}) do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-dr_title">Auftrag bearbeiten</h4>
      </div>
      <div class="modal-body" style="padding-bottom: 0px;">
        <div class="form-group">
          <%= f.label(:first_name, t('orders.sign_in.first_name_label'), class: "col-sm-4 control-label") %>
          <div class="col-sm-8">
            <%= f.text_field(:first_name, class: 'form-control', placeholder: t('orders.sign_in.first_name_placeholder')) %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label(:last_name, t('orders.sign_in.last_name_label'), class: "col-sm-4 control-label") %>
          <div class="col-sm-8">
            <%= f.text_field(:last_name, class: 'form-control', placeholder: t('orders.sign_in.last_name_placeholder')) %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label(:phone, t('orders.sign_in.phone_label'), class: "col-sm-4 control-label") %>
          <div class="col-sm-8">
            <%= f.text_field(:phone, class: 'form-control', placeholder: t('orders.sign_in.phone_placeholder')) %>
            <span class="help-block"><%= t('orders.sign_in.phone_hint') %></span>
          </div>
        </div>
        <div class="form-group">
          <%= f.label(:email, t('orders.sign_in.email_label'), class: "col-sm-4 control-label") %>
          <div class="col-sm-8">
            <%= f.text_field(:email, class: 'form-control', placeholder: t('orders.sign_in.email_placeholder')) %>
            <span class="help-block"><%= t('orders.sign_in.email_hint') %></span>
          </div>
        </div>
        <div class="form-group">
          <%= f.label(:reference, t('orders.sign_in.reference_label'), class: "col-sm-4 control-label") %>
          <div class="col-sm-8">
            <%= f.text_field(:reference, class: 'form-control', placeholder: t('orders.sign_in.reference_placeholder')) %>
            <span class="help-block"><%= t('orders.sign_in.reference_hint') %></span>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Abbrechen</button>
        <%= f.submit(t('orders.sign_in.submit'), class: 'btn btn-primary') %>
      </div>
    <% end %>
  </div>
</div>
