<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: 'col-sm-5', role: 'form'}) do |f| %>
  <div class="form-group">
    <%= f.label :id, class: 'control-label' %>
    <%= f.text_field :id, :autofocus => true, class: 'form-control' %>
  </div>
  <div class="form-group" >
    <%= f.label :password, class: 'control-label' %>
    <button style="float:right" type="button" class="btn btn-warning btn-xs" data-toggle="modal" data-target="#modal">Sicherheitschl√ºssel anfordern</button>
    <%= f.password_field :password, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit "Sign in", class: 'btn btn-primary btn-lg btn-block' %>
  </div>
<% end %>